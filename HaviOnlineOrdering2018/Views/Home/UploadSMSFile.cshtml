
@{
    ViewBag.Title = "Blank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {

        $("#Uploadbtn").click(function () {
            if ($("#fileInput")[0].files.length == 0) {
                alert("Please select a file first!");
                return false;
            }
        });
    })

</script>

@using (Html.BeginForm("SubmitFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Upload SMS File</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <a href="~/Home/InputItemCode">Click here to input items</a>
        </div>
    </div>
    @Html.Hidden("SMSFile", true)
    <div class="row">
        <div class="col-lg-4">
            <div class="input-group">
                <span class="control-fileupload">
                    <label for="fileInput"></label>
                    <input type="file" name="file" id="fileInput">
                </span>
                <br />
                <button type="submit" class="btn btn-info btn-sm" id="Uploadbtn">
                    <span class="glyphicon glyphicon-upload"></span> Upload Now
                </button>
            </div>
        </div>
    </div>

    @*<div class="row">
        <br />
        <div class="col-lg-12">
            <a href="~/Home/UploadExcelFile">Click here to upload Excel File</a>
        </div>
    </div>*@

</div>
<!-- /.container-fluid -->
}